@using ProjectX.MVC.ViewModel;
@{
}
@model TeacherViewModel

<div class="align-items-center ">
    <div class="card shadow">
        <div class="card-header ">
            <h2 class="text-center m-0 font-weight-bold">Edit teacher</h2>
            <form asp-action="Edit" method="post">
                <div>
                    <div @*class="form-group" style="width: 480px"*@>
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span class="alert-danger" asp-validation-for="LastName"></span>
                    </div>
                    <div @*class="form-group"*@>
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span class="alert-danger" asp-validation-for="FirstName"></span>
                    </div>
                    <div @*class="form-group"*@>
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span class="alert-danger" asp-validation-for="Email"></span>
                    </div>
                    <div @*class="form-group"*@>
                        <label asp-for="Phone"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span class="alert-danger" asp-validation-for="Phone"></span>
                    </div>

                    <div @*class="form-group"*@>
                        <label asp-for="Bio"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span class="alert-danger" asp-validation-for="Bio"></span>
                    </div>
                    <label @*class="my-1 mr-2"*@ for="inlineFormCustomSelectPref1">Group Number</label>
                    <select asp-for="Phone" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref1">
                        <option selected value="">Choose...</option>
                        <option value="1">1r</option>
                        <option value="1">2</option>
                        <option value="1">3</option>
                    </select>
                    <div class="text-center">
                        <button class="btn btn-primary" type="submit">Save</button>
                        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
}